		.interactive-world-map {
			width: 100%;
			height: 600px;
			border: 2px solid #e5e7eb;
			border-radius: 12px;
			overflow: hidden;
		}

		.world-svg {
			width: 100%;
			height: 100%;
		}

		.region.clickable {
			cursor: pointer;
			transition: all 0.3s ease;
		}

		.region.clickable:hover {
			stroke: #1f2937;
			stroke-width: 3;
