		.region.eu-region { fill: #bfdbfe; }
		.region.uk-region { fill: #a7f3d0; }
		.region.apac-region { fill: #fed7aa; }
		.region.sea-region { fill: #fde68a; }

		.region.primary { fill: #10b981; }
		.region.backup { fill: #3b82f6; }
