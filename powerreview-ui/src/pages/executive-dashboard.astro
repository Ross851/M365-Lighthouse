<script>
  // Initialize page with assessment data
  document.addEventListener('DOMContentLoaded', async () => {
    // Check if user is authenticated
    const token = localStorage.getItem('auth-token');
    if (!token) {
      window.location.href = '/login';
      return;
    }

    // Load assessment data
    await loadAssessmentData();
    
    // Initialize ROI chart
    initializeROIChart();
  });

  async function loadAssessmentData() {
    try {
      const response = await fetch('/api/assessment/executive-summary', {
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('auth-token')}`
        }
      });

      if (response.ok) {
        const data = await response.json();
        updateDashboard(data);
      }
    } catch (error) {
      console.error('Failed to load assessment data:', error);
    }
  }

  function updateDashboard(data) {
    // Update stats
    if (data.riskScore) document.getElementById('risk-score').textContent = data.riskScore + '%';
    if (data.financialExposure) document.getElementById('exposure').textContent = data.financialExposure;
    if (data.complianceScore) document.getElementById('compliance').textContent = data.complianceScore + '%';
    if (data.protectedUsers) document.getElementById('protected-users').textContent = data.protectedUsers + '%';
  }

  function viewEvidence(type) {
    const modal = document.getElementById('evidence-modal');
    const content = document.getElementById('evidence-content');
    
    // Load evidence based on type
    if (type === 'mfa-gap') {
      content.innerHTML = `
        <img src="/evidence/mfa-gap-evidence.png" alt="MFA Gap Evidence" style="width: 100%; margin: 1rem 0;">
        <h4>Azure AD Query Results</h4>
        <pre style="background: #f5f5f5; padding: 1rem; border-radius: 6px; overflow-x: auto;">
Get-MsolUser -All | Where &#123;$_.StrongAuthenticationRequirements.Count -eq 0&#125;

UserPrincipalName                 DisplayName              LastLogon
-----------------                 -----------              ---------
john.doe@contoso.com             John Doe                 2025-07-10
jane.smith@contoso.com           Jane Smith               2025-07-11
mike.johnson@contoso.com         Mike Johnson             2025-07-09
... (9 more users)
</pre>
        <p><strong>Verification Date:</strong> ${new Date().toLocaleDateString()}</p>
        <p><strong>SHA-256 Hash:</strong> a1b2c3d4e5f6...</p>
      `;
    } else if (type === 'sharepoint-sharing') {
      content.innerHTML = `
        <img src="/evidence/sharepoint-config.png" alt="SharePoint Configuration" style="width: 100%; margin: 1rem 0;">
        <h4>SharePoint Tenant Configuration</h4>
        <pre style="background: #f5f5f5; padding: 1rem; border-radius: 6px; overflow-x: auto;">
Get-SPOTenant | Select SharingCapability

SharingCapability: ExternalUserAndGuestSharing
DefaultSharingLinkType: Anyone
RequireAcceptingAccountMatchInvitedAccount: False
</pre>
        <p><strong>Risk Level:</strong> <span style="color: #ff3b30; font-weight: bold;">HIGH</span></p>
      `;
    }
    
    modal.style.display = 'block';
  }

  function closeModal() {
    document.getElementById('evidence-modal').style.display = 'none';
  }

  function selectRecommendation(tier) {
    window.location.href = `/recommendation-details?tier=${tier}`;
  }

  async function generateExecutiveReport() {
    const button = event.target.closest('button');
    button.disabled = true;
    button.textContent = 'Generating Report...';
    
    try {
      const response = await fetch('/api/reports/executive', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('auth-token')}`,
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          format: 'pdf',
          includeEvidence: true,
          clientName: 'Your Organization'
        })
      });

      if (response.ok) {
        const blob = await response.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `Executive-Security-Report-${new Date().toISOString().split('T')[0]}.pdf`;
        document.body.appendChild(a);
        a.click();
        window.URL.revokeObjectURL(url);
        document.body.removeChild(a);
        
        button.textContent = 'Download Executive Report';
        button.disabled = false;
      }
    } catch (error) {
      console.error('Failed to generate report:', error);
      button.textContent = 'Download Executive Report';
      button.disabled = false;
    }
  }

  function scheduleConsultation() {
    window.location.href = '/schedule-consultation';
  }

  function viewDetailedAnalysis() {
    window.location.href = '/assessment';
  }

  function initializeROIChart() {
    const canvas = document.getElementById('roi-chart');
    if (!canvas) return;
    
    // Simple bar chart representation
    const ctx = canvas.getContext('2d');
    const data = [
      { label: 'Gold', value: 114, color: '#FFD700' },
      { label: 'Silver', value: 227, color: '#C0C0C0' },
      { label: 'Bronze', value: 100, color: '#CD7F32' }
    ];
    
    const maxValue = Math.max(...data.map(d => d.value));
    const barWidth = canvas.width / data.length * 0.6;
    const barGap = canvas.width / data.length * 0.4;
    
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    
    data.forEach((item, index) => {
      const barHeight = (item.value / maxValue) * (canvas.height - 40);
      const x = index * (barWidth + barGap) + barGap / 2;
      const y = canvas.height - barHeight - 20;
      
      // Draw bar
      ctx.fillStyle = item.color;
      ctx.fillRect(x, y, barWidth, barHeight);
      
      // Draw label
      ctx.fillStyle = '#333';
      ctx.font = '12px Inter';
      ctx.textAlign = 'center';
      ctx.fillText(item.label, x + barWidth / 2, canvas.height - 5);
      
      // Draw value
      ctx.fillText(`$${item.value}`, x + barWidth / 2, y - 5);
    });
  }

  // Close modal when clicking outside
  window.onclick = function(event) {
    const modal = document.getElementById('evidence-modal');
    if (event.target === modal) {
      modal.style.display = 'none';
    }
  }
</script>