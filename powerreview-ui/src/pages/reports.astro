          cutout: '75%',
          plugins: {
            legend: { display: false },
            tooltip: { enabled: false }
          }
        }
      });
    });

    function viewReport(reportId) {
      // Navigate to report viewer with report data
      const params = new URLSearchParams({
        id: reportId,
        type: 'security',
        professional: 'true'
      });
      
      localStorage.setItem('currentReport', JSON.stringify({
        id: reportId,
        type: 'security',
        status: 'completed'
      }));
      
      window.location.href = `/report-viewer?${params.toString()}`;
    }

    function downloadReport(reportId) {
      alert(`Downloading ${reportId} report as PDF...`);
    }

    function downloadExecutiveSummary() {
      alert('Downloading executive summary...');
    }

    function scheduleConsultation() {
      alert('Opening calendar to schedule consultation...');
    }

    function downloadFullReport() {
      alert('Preparing complete assessment report for download...');
    }

    function filterReports() {
      const filter = document.getElementById('categoryFilter').value;
      const cards = document.querySelectorAll('.report-card');
      
      cards.forEach(card => {
        if (filter === 'all' || card.dataset.category === filter) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }
  </script>
